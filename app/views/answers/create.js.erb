$('.flash').html('<%= j render 'layouts/messages' %>');

<% if @answer.errors.present? %>
    $('#new_answer').html('<%= j render 'questions/new_answer_form', question: @question, answer: @answer %>')
<% else %>
    $('#new_answer').html('<%= j render 'questions/new_answer_form', question: @question, answer: @question.answers.new %>')
<% end %>