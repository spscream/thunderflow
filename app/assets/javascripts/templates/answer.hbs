<div class="row answer answer-{{ id }}">
    <div class="columns small-10">
        <div class="answer-text">{{ text }}</div>
        <ul></ul>
        <h5 class="author">
            <small>{{ user.email }}, <time class="timeago" title="{{ created_at }}">{{ created_at }}</time></small>
        </h5>
    </div>
    <div class="columns small-2 text-center"><a class="answer-edit button radius tiny" data-answer-id="{{ id }}" href="#">Edit
        answer</a><a class="button tiny radius" data-method="delete" data-remote="true" href="/answers/{{ id }}"
                     rel="nofollow">Delete answer</a>

        <form action="/answers/{{ id }}/accept" class="button_to" data-remote="true" method="post">
            <div><input class="button tiny radius" type="submit" value="Accept"><input name="authenticity_token"
                                                                                       type="hidden"
                                                                                       value="i2nRhI3oVZC8URoxOjxfpKQJi6jnp5p6VbeS+6tUK9M=">
            </div>
        </form>
    </div>
    <div class="columns small-12 answer-form-{{ id }} hide">
        <div class="columns small-12 answer-form-{{ id }} hide">
            <form accept-charset="UTF-8" action="/answers/{{ id }}" class="simple_form edit_answer" data-remote="true"
                  enctype="multipart/form-data" id="edit_answer_{{ id }}" method="post" novalidate="novalidate">
                <div style="display:none"><input name="utf8" type="hidden" value="âœ“"><input name="_method" type="hidden"
                                                                                            value="patch"></div>
                <div class="input string required answer_text"><label class="string required control-label"
                                                                      for="answer_text"><abbr title="required">*</abbr>
                    Text</label><input class="string required" id="answer_text" name="answer[text]" type="text"
                                       value="{{ text }}"></div>
                <div class="row">
                    <div class="columns small-10" id="attachments-answer-{{ id }}"></div>
                    <div class="columns small-2 text-right"><a class="button tiny add_nested_fields"
                                                               data-association="attachments"
                                                               data-blueprint-id="attachments_fields_blueprint"
                                                               data-target="attachments-answer-{{ id }}"
                                                               href="javascript:void(0)">Add a file</a></div>
                </div>
                <input class="button button small" name="commit" type="submit" value="Update Answer">

                <div data-blueprint="<div class=&quot;fields&quot;><div class=&quot;input file required answer_attachments_file&quot;><label class=&quot;file required control-label&quot; for=&quot;answer_attachments_attributes_new_attachments_file&quot;><abbr title=&quot;required&quot;>*</abbr> File</label><input class=&quot;file required&quot; id=&quot;answer_attachments_attributes_new_attachments_file&quot; name=&quot;answer[attachments_attributes][new_attachments][file]&quot; type=&quot;file&quot; /></div><input id=&quot;answer_attachments_attributes_new_attachments_file_cache&quot; name=&quot;answer[attachments_attributes][new_attachments][file_cache]&quot; type=&quot;hidden&quot; /><p><input id=&quot;answer_attachments_attributes_new_attachments__destroy&quot; name=&quot;answer[attachments_attributes][new_attachments][_destroy]&quot; type=&quot;hidden&quot; value=&quot;false&quot; /><a class=&quot;remove_nested_fields&quot; data-association=&quot;attachments&quot; href=&quot;javascript:void(0)&quot;>Remove this attachment</a></p><hr /></div>"
                     id="attachments_fields_blueprint" style="display: none"></div>
            </form>
        </div>
    </div>
</div>